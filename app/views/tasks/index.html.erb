<p id="notice"><%= notice %></p>

<h1>Current Tasks</h1>

<table>
  <thead>
    <tr>
      <th>There's just so much to do!!!</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <!-- <td><%= link_to 'See More', task %></td> -->
        <td><%= link_to 'Edit', edit_task_path(task), remote: true %></td>
        <td><%= link_to 'Complete', task, method: :delete, data: { confirm: 'Congrats! Keep up the Good Work!' } %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Go ahead and add more to your plate!</h3>
<%= render 'form', task: @task %>

